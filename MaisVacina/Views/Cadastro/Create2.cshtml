@model MaisVacina.Models.Cadastro
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-image: url(/Images/vacina-fundo.jpeg);
            background-attachment: fixed;
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center, center;
        }
    </style>


</head>
<body>
    @{
        ViewData["Title"] = "Criar Cadastro";
    }

    <h2>Criar Cadastro</h2>
    <h4><font color="black"> Crie seu pré-cadastro para a campanha de vacinação contra Covid-19,</font></h4>
    <h4><font color="black"> assim que chegar sua vez, avisaremos!</font> </h4>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create2" autocomplete="off">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" id="nome" />
                    <span class="invisivel" id="erroNome">Insira um nome válido!</span>
                </div>
                <div class="form-group">
                    <label asp-for="Nascimento" class="control-label"></label>
                    <input asp-for="Nascimento" class="form-control" id="nasc" />
                    <span class="invisivel" id="erroNasc">Insira uma data válida!</span>
                </div>
                <div class="form-group">
                    <label asp-for="Endereco" class="control-label"></label>
                    <input asp-for="Endereco" class="form-control" id="endereco" />
                    <span class="invisivel" id="erroEndereco">Insira um endereço válido!</span>
                </div>
                <div class="form-group">
                    <label asp-for="CPF" class="control-label"></label>
                    <input asp-for="CPF" class="form-control" id="cpf" />
                    <span class="invisivel" id="erroCpf">Insira um cpf válido!</span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" id="email" />
                    <span class="invisivel" id="erroEmail">Insira um e-mail válido!</span>
                </div>
                <div class="form-group">
                    <input type="submit" onclick="return validarCadastro()" value="Criar" class="btn btn-success" />
                    <a asp-controller="Home" asp-action="About" class="btn btn-default">Inicio</a>
                </div>
            </form>
        </div>
    </div>

</body>
</html>


