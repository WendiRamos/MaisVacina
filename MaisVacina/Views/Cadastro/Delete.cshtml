@model MaisVacina.Models.Cadastro
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-image: url(/Images/vacina-fundo.jpeg);
            background-attachment: fixed;
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center, center;
        }
    </style>

</head>
<body>

    @{
        ViewData["Title"] = "Deletar";
    }

    <h2>Deletar Cadastro</h2>

    <h3>Tem certeza que quer deletar o cadastro?</h3>
    <div>
        <form asp-action="Delete">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Nascimento)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Nascimento)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Endereco)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Endereco)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.CPF)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.CPF)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>
            </dl>

            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Deletar" class="btn btn-danger" /> 
            <a asp-action="Index" class="btn btn-default">Voltar</a>
        </form>
    </div>

</body>
</html>
